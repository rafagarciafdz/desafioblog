<div class="post">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @post.content %>
	</p>

	<p>
	  <strong>Votes:</strong>
	  <span id="<%= @post.id %>"><%= @post.votes.count %></span>
	</p>

	<p>
		<% if @post.users_who_voted.include? current_user %>
			<%= link_to "Vota: -1", upvote_post_path(@post), remote: true %>
		<% else %>
			<%= link_to "Vota: +1", upvote_post_path(@post), remote: true %>
	  <% end %>
	</p>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>

	<div id="comments_count">
		<strong>Comments:</strong>
		<%= @post.comments.count %>
	</div>

	<div id="comments">
		<%= render partial: "comments/comment", collection: @last_comments %>
	</div>

	<%= render "comments/form" %>
</div>