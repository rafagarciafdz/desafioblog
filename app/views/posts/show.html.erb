<div class="post">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @post.content %>
	</p>

	<p>
	  <strong>Votes:</strong>
	  <%= @post.votes.count %>
	</p>

	<p>
		<strong>Vote:</strong>
		<%= link_to "+1", upvote_post_path(@post) %>
	</p>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>

	<div id="comments_count">
		<strong>Comments:</strong>
		<%= @post.comments.count %>
	</div>

	<div id="comments">
		<%= render partial: "comments/comment", collection: @last_comments %>
	</div>

	<%= render "comments/form" %>
</div>